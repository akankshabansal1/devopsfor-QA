pipeline
{
agent any
tools
{
  maven 'maven'
}
stages
{
  stage('checkout')
  {
    steps
    {
        checkout scm
     }
  }
  
  
  stage('Build')
  {
    steps
    {
      bat "mvn clean install"
    }
  }
	
  
    stage ('Uploading to Artifactory')
	{
		steps
		{
		echo "Stage for artifact"
		rtMavenDeployer (
                    id: 'deployer',
                    serverId: '123456789@artifactory',
		    snapshotRepo: 'akanksha.bansalDevopsTraining',
                    releaseRepo: 'akanksha.bansalDevopsTraining_release'
                    
                )
                rtMavenRun (
                    pom: 'pom.xml',
                    goals: 'clean install',
                    deployerId: 'deployer',
                )
                rtPublishBuildInfo (
                    serverId: '123456789@artifactory',
                )
			
		}
	}
	stage ('Dcoker image')
	    	{
			steps
			{
				echo "Building docker image"
				bat returnStdout: true, script: 'docker build -t codeamazon:2 .'
			}
		}
		
		stage ('Docker Deployment')
	    	{
			steps
			{
				echo "Deploying war file"
				bat "docker run --name codeamazoncontainer -d -p 9009:8080 codeamazon:2"
			}
		}
	
}
  
  }
